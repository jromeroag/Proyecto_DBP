    <div class="boxProducto">

        <h1>Editar Doctor</h1>

    <form asp-controller="Doctor" asp-action="editDoctor" method="post">
        <input type="hidden" asp-for="Iddoc" />
        <br />
            Nombre:<input type="text" asp-for="Nomdoc" placeholder="Ingrese el nuevo Nombre del Paciente" required />
        <br />
            Apellido:<input type="text" asp-for="Apedoc" placeholder="Ingrese el nuevo Apellido del Paciente" required />
        <br />
            Especialidad:<input type="text" asp-for="Espdoc" placeholder="Ingrese el nuevo Correo del Paciente" required />
        <br />
            Celular:<input type="text" asp-for="Celdoc" placeholder="Ingresar el nuevo DNI de telefono del Paciente" required />
            <br />
            
            <input type="submit" class="btn btn-success" value="Editar" />
