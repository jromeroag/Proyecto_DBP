@{
}
<html>

<head>

</head>
<body>
    <h1>Lista de Citas Actuales</h1>
    <div class="boxProducto">

        
        <a class="btn btn-danger mx-auto" asp-controller="Portada" asp-action="Index">Salir</a>

        @foreach (var item in Model)
        {

            <div class="card m-5" style="min-width:18rem;max-width:30.5%;">
                <div class="card-header">
                    <h5>Nombre: <strong>@item.Idpa</strong></h5>
                    <h5>Apellido: <strong>@item.Iddoc</strong></h5>
                    <h5>Especialidad: <strong>@item.Fecin</strong></h5>
                    <h5>Cell: <strong>@item.Fecfi</strong></h5>
                </div>
                <div class="card-footer text-center">

                    <a asp-action="Edit" asp-route-id="@item.Iddoc" class="btn btn-primary m-2">Editar</a>
                </div>
            </div>
        }


    </div>


</body>


</html>