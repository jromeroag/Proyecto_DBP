<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebAppliProyectoFinal</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebAppliProyectoFinal.styles.css" asp-append-version="true" />

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/estilos.css" />





</head>
<body >
    <header>
        
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div>
                    <nav class="navbar navbar-expand-lg bg-body-tertiary">
                        <div class="container-fluid">
                            
                           
                            <a class="navbar-brand" href="#">Clinica</a>
                            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                                <span class="navbar-toggler-icon"></span>
                            </button>

                            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                                    <li class="nav-item">
                                    <a class="nav-link active"  asp-controller="Usuario" asp-action="Principal">Home</a>
                                    </li>

                                    

                                    


                                </ul>
                                <form class=" form-control me-2" >
                                    
                                    <button class="btn btn-outline-success" type="submit" asp-controller="Usuario" asp-action="Index"  >Iniciar</button>
                                    <button class="btn btn-outline-success" type="submit" asp-controller="Usuario" asp-action="Nuevo">Crear Cuenta</button>
                                </form>
                            </div>
                        </div>
                    </nav>
                
               
            </div>
        </nav>
    </header>






    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

   
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
